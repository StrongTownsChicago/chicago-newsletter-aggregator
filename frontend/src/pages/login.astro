---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import { notificationsEnabled } from '../lib/supabase';

// Redirect if notifications are disabled
if (!notificationsEnabled()) {
  return Astro.redirect('/');
}

// Redirect to home if already logged in
const user = Astro.locals.user;
if (user) {
  return Astro.redirect('/');
}

const error = Astro.url.searchParams.get('error');
const message = Astro.url.searchParams.get('message');
---

<Layout title="Sign In - Chicago Alderman Newsletter Tracker">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gray-50">
    <div class="max-w-md w-full">
      <!-- Logo/Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
          Chicago Alderman Newsletter Tracker
        </h1>
        <p class="text-sm text-gray-600">
          Sign in to manage your notification preferences
        </p>
      </div>

      <!-- Card -->
      <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8">
        <div class="mb-6">
          <h2 class="text-2xl font-bold text-gray-900">
            Sign in
          </h2>
          <p class="mt-2 text-sm text-gray-600">
            Or{' '}
            <a href="/signup" class="font-medium text-blue-600 hover:text-blue-500">
              create a new account
            </a>
          </p>
        </div>

        {error && (
          <div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-md text-sm">
            {error}
          </div>
        )}

        {message && (
          <div class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-md text-sm">
            {message}
          </div>
        )}

        <form class="space-y-5" action="/api/auth/signin" method="POST" enctype="application/x-www-form-urlencoded">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
              Email address
            </label>
            <input
              id="email"
              name="email"
              type="email"
              autocomplete="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              placeholder="you@example.com"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
              Password
            </label>
            <input
              id="password"
              name="password"
              type="password"
              autocomplete="current-password"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              placeholder="••••••••"
            />
          </div>

          <div class="pt-2">
            <button
              type="submit"
              class="w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors shadow-sm"
            >
              Sign in
            </button>
          </div>
        </form>
      </div>

      <div class="text-center mt-6">
        <a href="/" class="text-sm text-gray-600 hover:text-gray-900 font-medium">
          ← Back to home
        </a>
      </div>
    </div>
  </div>
</Layout>
