---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

const { id } = Astro.params;

const { data: newsletter, error } = await supabase
  .from('newsletters')
  .select('*, sources(*)')
  .eq('id', id)
  .single();

if (error || !newsletter) {
  return Astro.redirect('/404');
}
---

<Layout title={`${newsletter.subject} - Chicago Newsletter Aggregator`}>
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-6 font-medium">
      ‚Üê Back to newsletters
    </a>

    <article class="bg-white rounded-lg shadow-lg p-8 border border-gray-200">
      <header class="mb-8 border-b border-gray-200 pb-6">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          {newsletter.subject}
        </h1>
        
        <div class="space-y-2 mb-4">
          <!-- Source info row -->
          <div class="flex flex-wrap items-center gap-3 text-gray-600">
            {newsletter.sources?.name && (
              <span class="text-lg font-medium text-gray-800">{newsletter.sources.name}</span>
            )}
            {newsletter.sources?.ward_number && (
              <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold">
                Ward {newsletter.sources.ward_number}
              </span>
            )}
            {newsletter.sources?.phone && (
              <a href=`tel:${newsletter.sources.phone}`} class="text-blue-600 hover:text-blue-800 hover:underline">
                üìû {newsletter.sources.phone}
              </a>
            )}
            {newsletter.sources?.email_address && (
              <a href=`mailto:${newsletter.sources.email_address}`} class="text-blue-600 hover:text-blue-800 hover:underline">
                ‚úâÔ∏è {newsletter.sources.email_address}
              </a>
            )}
          </div>
          
          <!-- Date row -->
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <time datetime={newsletter.received_date}>
              {new Date(newsletter.received_date).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </div>
        </div>

        {newsletter.relevance_score !== null && (
        <div class="flex items-center gap-2 mb-4">
            <span class="text-sm font-semibold text-gray-700">Relevance:</span>
            <span class={`px-3 py-1 rounded-full text-sm font-bold ${
            newsletter.relevance_score >= 8 ? 'bg-green-100 text-green-800' :
            newsletter.relevance_score >= 5 ? 'bg-yellow-100 text-yellow-800' :
            'bg-gray-100 text-gray-600'
            }`}>
            {newsletter.relevance_score}/10
            </span>
        </div>
        )}

        {newsletter.topics && newsletter.topics.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-4">
            {newsletter.topics.map((topic: string) => (
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                {topic}
              </span>
            ))}
          </div>
        )}

        {newsletter.summary && (
          <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r">
            <p class="font-semibold text-sm text-blue-900 mb-1">Summary</p>
            <p class="text-gray-800">{newsletter.summary}</p>
          </div>
        )}
      </header>

      <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-700 prose-a:text-blue-600 prose-strong:text-gray-900">
        {newsletter.raw_html ? (
          <div set:html={newsletter.raw_html} />
        ) : (
          <div class="whitespace-pre-wrap font-sans">{newsletter.plain_text}</div>
        )}
      </div>
    </article>
  </div>
</Layout>