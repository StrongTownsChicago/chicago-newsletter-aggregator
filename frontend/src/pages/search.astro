---
export const prerender = false;

// Server-rendered: Queries Supabase fresh on every search
import { supabase } from '../lib/supabase';

const searchQuery = Astro.url.searchParams.get('q') || '';
const sourceTypeFilter = Astro.url.searchParams.get('source_type');
const topicFilter = Astro.url.searchParams.get('topic');

let query = supabase
  .from('newsletters')
  .select('*')
  .order('received_date', { ascending: false });

// Full-text search
if (searchQuery) {
  query = query.textSearch('search_vector', searchQuery);
}

// Source type filter
if (sourceTypeFilter) {
  query = query.eq('source_type', sourceTypeFilter);
}

// Topic filter
if (topicFilter) {
  query = query.contains('topics', [topicFilter]);
}

const { data: newsletters } = await query.limit(50);

// Get unique topics for filter dropdown
const { data: allTopics } = await supabase
  .from('newsletters')
  .select('topics')
  .not('topics', 'is', null);

const uniqueTopics = [...new Set(
  allTopics?.flatMap((n: any) => n.topics || []) || []
)].sort();

// Get unique source types
const { data: sourceTypes } = await supabase
  .from('newsletters')
  .select('source_type')
  .not('source_type', 'is', null);

const uniqueSourceTypes = [...new Set(
  sourceTypes?.map((s: any) => s.source_type).filter(Boolean) || []
)].sort();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Search - Chicago Newsletters</title>
  </head>
  <body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8 max-w-6xl">
      <a href="/" class="text-blue-600 hover:underline mb-4 inline-block">← Home</a>

      <h1 class="text-4xl font-bold mb-6">Search Newsletters</h1>

      <form method="get" class="bg-white rounded-lg shadow p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Search
            </label>
            <input
              type="text"
              name="q"
              value={searchQuery}
              placeholder="Enter keywords..."
              class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Source Type
            </label>
            <select name="source_type" class="w-full px-4 py-2 border rounded-lg">
              <option value="">All Types</option>
              {uniqueSourceTypes.map(type => (
                <option value={type} selected={sourceTypeFilter === type}>
                  {type.replace('_', ' ').replace(/\b\w/g, (l: string) => l.toUpperCase())}
                </option>
              ))}
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Topic
            </label>
            <select name="topic" class="w-full px-4 py-2 border rounded-lg">
              <option value="">All Topics</option>
              {uniqueTopics.map(topic => (
                <option value={topic} selected={topicFilter === topic}>
                  {topic}
                </option>
              ))}
            </select>
          </div>
        </div>

        <button
          type="submit"
          class="mt-4 px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
        >
          Search
        </button>
      </form>

      <div class="space-y-4">
        {newsletters?.length === 0 && (
          <p class="text-gray-600">No newsletters found matching your criteria.</p>
        )}

        {newsletters?.map((newsletter) => (
          <article class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold mb-2">
              <a href={`/newsletter/${newsletter.id}`} class="hover:text-blue-600">
                {newsletter.subject}
              </a>
            </h2>
            <p class="text-sm text-gray-600 mb-2">
              {newsletter.source_name && newsletter.source_name}
              {newsletter.source_type && ` (${newsletter.source_type.replace('_', ' ')})`}
              {newsletter.source_metadata?.ward_number && ` • Ward ${newsletter.source_metadata.ward_number}`}
              {' • '}
              {new Date(newsletter.received_date).toLocaleDateString()}
            </p>
            {newsletter.summary && (
              <p class="text-gray-700">{newsletter.summary}</p>
            )}
          </article>
        ))}
      </div>
    </div>
  </body>
</html>