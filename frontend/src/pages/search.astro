---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import NewsletterCard from '../components/NewsletterCard.astro';
import Pagination from '../components/Pagination.astro';
import AuthButton from '../components/AuthButton.astro';
import { supabase, notificationsEnabled } from '../lib/supabase';
import type { Newsletter, Source } from '../lib/supabase';

const searchQuery = Astro.url.searchParams.get('q') || '';
const sourceTypeFilter = Astro.url.searchParams.get('source_type');
const topicFilter = Astro.url.searchParams.get('topic');
const wardFilter = Astro.url.searchParams.get('ward');

// Pagination setup
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const PAGE_SIZE = 20;
const start = (page - 1) * PAGE_SIZE;
const end = start + PAGE_SIZE - 1;

// Use !inner when we need to filter on sources table
const sourcesJoin = (wardFilter || sourceTypeFilter) ? 'sources!inner(*)' : 'sources(*)';

// Build count query with same filters
let countQuery = supabase
  .from('newsletters')
  .select(`*, ${sourcesJoin}`, { count: 'exact', head: true });

// Build data query
let query = supabase
  .from('newsletters')
  .select(`*, ${sourcesJoin}`)
  .order('received_date', { ascending: false });

// Apply filters to both queries
if (searchQuery) {
  countQuery = countQuery.textSearch('search_vector', searchQuery, {
    type: 'websearch',
    config: 'english'
  });
  query = query.textSearch('search_vector', searchQuery, {
    type: 'websearch',
    config: 'english'
  });
}

if (sourceTypeFilter) {
  countQuery = countQuery.eq('sources.source_type', sourceTypeFilter);
  query = query.eq('sources.source_type', sourceTypeFilter);
}

if (wardFilter) {
  countQuery = countQuery.eq('sources.ward_number', wardFilter);
  query = query.eq('sources.ward_number', wardFilter);
}

if (topicFilter) {
  countQuery = countQuery.contains('topics', [topicFilter]);
  query = query.contains('topics', [topicFilter]);
}

// Get total count
const { count } = await countQuery;
const totalPages = Math.ceil((count || 0) / PAGE_SIZE);

// Get paginated data
const { data: newsletters } = await query.range(start, end);

// Get unique topics
const { data: allTopics } = await supabase
  .from('newsletters')
  .select('topics')
  .not('topics', 'is', null);

const uniqueTopics = [...new Set(
  allTopics?.flatMap((n: Pick<Newsletter, 'topics'>) => n.topics || []) || []
)].sort();

// Get unique ward numbers
const { data: wardData } = await supabase
  .from('sources')
  .select('ward_number')
  .eq('source_type', 'alderman')
  .not('ward_number', 'is', null);

const uniqueWards = [...new Set(
  wardData?.map((s: Pick<Source, 'ward_number'>) => s.ward_number).filter(Boolean) || []
)].sort((a, b) => parseInt(a as string) - parseInt(b as string));

// Build base URL with all query params except 'page' for pagination
const buildBaseUrl = () => {
  const params = new URLSearchParams();
  if (searchQuery) params.set('q', searchQuery);
  if (wardFilter) params.set('ward', wardFilter);
  if (topicFilter) params.set('topic', topicFilter);
  if (sourceTypeFilter) params.set('source_type', sourceTypeFilter);

  const queryString = params.toString();
  return queryString ? `/search?${queryString}` : '/search';
};

const baseUrl = buildBaseUrl();
---

<Layout title="Search - Chicago Alderman Newsletter Tracker">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Top Bar with Auth -->
    <div class="mb-6 flex justify-end">
      <AuthButton />
    </div>

    <!-- Header -->
    <header class="mb-8">
      <h1 class="text-3xl sm:text-5xl font-bold text-gray-900 mb-2 sm:mb-3">
        Search Newsletters
      </h1>
      <p class="text-base sm:text-xl text-gray-600">
        Filter and search through Chicago alderman newsletters
      </p>
    </header>

    <!-- Navigation -->
    <nav class="mb-8 flex gap-6 border-b border-gray-200 pb-4">
      <a href="/" class="text-gray-600 hover:text-blue-600 pb-3">Recent</a>
      <a href="/search" class="text-blue-600 font-semibold border-b-2 border-blue-600 pb-3">Search</a>
      {notificationsEnabled() && Astro.locals.user && (
        <a href="/preferences" class="text-gray-600 hover:text-blue-600 pb-3">Preferences</a>
      )}
    </nav>

    <form method="get" class="bg-white rounded-lg shadow-md p-6 mb-8 border border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            Search Keywords
          </label>
          <input
            type="text"
            name="q"
            value={searchQuery}
            placeholder="Enter keywords..."
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          />
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            Ward Number
          </label>
          <select name="ward" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Wards</option>
            {uniqueWards.map(ward => (
              <option value={ward} selected={wardFilter === ward}>
                Ward {ward}
              </option>
            ))}
          </select>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            Topic
          </label>
          <select name="topic" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Topics</option>
            {uniqueTopics.map(topic => (
              <option value={topic} selected={topicFilter === topic}>
                {topic}
              </option>
            ))}
          </select>
        </div>
      </div>

      <div class="flex gap-3">
        <button
          type="submit"
          class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors shadow-sm"
        >
          Search
        </button>

        <a
        href="/search"
        class="px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition-colors"
        >
        Clear Filters
        </a>
      </div>
    </form>

    <!-- Results count -->
    <div class="mb-4 text-gray-600">
      {newsletters?.length === 0 ? (
        <p>No newsletters found matching your criteria.</p>
      ) : count !== null && (
        <p>Found {count} newsletter{count !== 1 ? 's' : ''}</p>
      )}
    </div>

    <div class="space-y-4">
      {newsletters?.map((newsletter) => (
        <NewsletterCard newsletter={newsletter} />
      ))}
    </div>

    <!-- Pagination -->
    <Pagination currentPage={page} totalPages={totalPages} baseUrl={baseUrl} />
  </div>
</Layout>