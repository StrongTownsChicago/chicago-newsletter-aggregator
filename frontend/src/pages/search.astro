---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

const searchQuery = Astro.url.searchParams.get('q') || '';
const sourceTypeFilter = Astro.url.searchParams.get('source_type');
const topicFilter = Astro.url.searchParams.get('topic');

let query = supabase
  .from('newsletters')
  .select('*, sources(*)')
  .order('received_date', { ascending: false });

if (searchQuery) {
  query = query.textSearch('search_vector', searchQuery);
}

if (sourceTypeFilter) {
  query = query.eq('source_type', sourceTypeFilter);
}

if (topicFilter) {
  query = query.contains('topics', [topicFilter]);
}

const { data: newsletters } = await query.limit(50);

const { data: allTopics } = await supabase
  .from('newsletters')
  .select('topics')
  .not('topics', 'is', null);

const uniqueTopics = [...new Set(
  allTopics?.flatMap((n: any) => n.topics || []) || []
)].sort();

const { data: sourceTypes } = await supabase
  .from('sources')
  .select('source_type')
  .not('source_type', 'is', null);

const uniqueSourceTypes = [...new Set(
  sourceTypes?.map((s: any) => s.source_type).filter(Boolean) || []
)].sort();
---

<Layout title="Search - Chicago Newsletters">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-6 font-medium">
      ← Home
    </a>

    <h1 class="text-4xl font-bold mb-6 text-gray-900">Search Newsletters</h1>

    <form method="get" class="bg-white rounded-lg shadow-md p-6 mb-8 border border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            Search Keywords
          </label>
          <input
            type="text"
            name="q"
            value={searchQuery}
            placeholder="Enter keywords..."
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          />
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            Source Type
          </label>
          <select name="source_type" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Types</option>
            {uniqueSourceTypes.map(type => (
              <option value={type} selected={sourceTypeFilter === type}>
                {type.replace('_', ' ').replace(/\b\w/g, (l: string) => l.toUpperCase())}
              </option>
            ))}
          </select>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            Topic
          </label>
          <select name="topic" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Topics</option>
            {uniqueTopics.map(topic => (
              <option value={topic} selected={topicFilter === topic}>
                {topic}
              </option>
            ))}
          </select>
        </div>
      </div>

      <button
        type="submit"
        class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors shadow-sm"
      >
        Search
      </button>
    </form>

    <div class="space-y-4">
      {newsletters?.length === 0 && (
        <p class="text-gray-600 text-center py-12 bg-white rounded-lg">
          No newsletters found matching your criteria.
        </p>
      )}

      {newsletters?.map((newsletter) => (
        <article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 border border-gray-200">
          <h2 class="text-2xl font-semibold mb-2">
            <a href={`/newsletter/${newsletter.id}`} class="hover:text-blue-600">
              {newsletter.subject}
            </a>
          </h2>
          <p class="text-sm text-gray-600 mb-2">
            {newsletter.sources?.name && newsletter.sources.name}
            {newsletter.sources?.metadata?.ward_number && ` • Ward ${newsletter.sources.metadata.ward_number}`}
            {' • '}
            {new Date(newsletter.received_date).toLocaleDateString()}
          </p>
          {newsletter.summary && (
            <p class="text-gray-700">{newsletter.summary}</p>
          )}
        </article>
      ))}
    </div>
  </div>
</Layout>