---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import NewsletterCard from '../components/NewsletterCard.astro';
import { supabase } from '../lib/supabase';

const searchQuery = Astro.url.searchParams.get('q') || '';
const sourceTypeFilter = Astro.url.searchParams.get('source_type');
const topicFilter = Astro.url.searchParams.get('topic');
const wardFilter = Astro.url.searchParams.get('ward');

// Use !inner when we need to filter on sources table
const sourcesJoin = (wardFilter || sourceTypeFilter) ? 'sources!inner(*)' : 'sources(*)';

let query = supabase
  .from('newsletters')
  .select(`*, ${sourcesJoin}`)
  .order('received_date', { ascending: false });

// Full-text search (case-insensitive)
if (searchQuery) {
  query = query.textSearch('search_vector', searchQuery, {
    type: 'websearch',
    config: 'english'
  });
}

// Source type filter
if (sourceTypeFilter) {
  query = query.eq('sources.source_type', sourceTypeFilter);
}

// Ward filter
if (wardFilter) {
  query = query.eq('sources.ward_number', wardFilter);
}

// Topic filter
if (topicFilter) {
  query = query.contains('topics', [topicFilter]);
}

const { data: newsletters } = await query.limit(50);

// Get unique topics
const { data: allTopics } = await supabase
  .from('newsletters')
  .select('topics')
  .not('topics', 'is', null);

const uniqueTopics = [...new Set(
  allTopics?.flatMap((n: any) => n.topics || []) || []
)].sort();

// Get unique source types
const { data: sourceTypes } = await supabase
  .from('sources')
  .select('source_type')
  .not('source_type', 'is', null);

const uniqueSourceTypes = [...new Set(
  sourceTypes?.map((s: any) => s.source_type).filter(Boolean) || []
)].sort();

// Get unique ward numbers
const { data: wardData } = await supabase
  .from('sources')
  .select('ward_number')
  .eq('source_type', 'alderman')
  .not('ward_number', 'is', null);

const uniqueWards = [...new Set(
  wardData?.map((s: any) => s.ward_number).filter(Boolean) || []
)].sort((a, b) => parseInt(a) - parseInt(b));
---

<Layout title="Search - Chicago Newsletter Aggregator">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-6 font-medium">
      ‚Üê Home
    </a>

    <h1 class="text-4xl font-bold mb-6 text-gray-900">Search Newsletters</h1>

    <form method="get" class="bg-white rounded-lg shadow-md p-6 mb-8 border border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            Search Keywords
          </label>
          <input
            type="text"
            name="q"
            value={searchQuery}
            placeholder="Enter keywords..."
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          />
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            Ward Number
          </label>
          <select name="ward" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Wards</option>
            {uniqueWards.map(ward => (
              <option value={ward} selected={wardFilter === ward}>
                Ward {ward}
              </option>
            ))}
          </select>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            Topic
          </label>
          <select name="topic" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">All Topics</option>
            {uniqueTopics.map(topic => (
              <option value={topic} selected={topicFilter === topic}>
                {topic}
              </option>
            ))}
          </select>
        </div>
      </div>

      <div class="flex gap-3">
        <button
          type="submit"
          class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors shadow-sm"
        >
          Search
        </button>

        <a
        href="/search"
        class="px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition-colors"
        >
        Clear Filters
        </a>
      </div>
    </form>

    <!-- Results count -->
    <div class="mb-4 text-gray-600">
      {newsletters?.length === 0 ? (
        <p>No newsletters found matching your criteria.</p>
      ) : (
        <p>Found {newsletters?.length} newsletter{newsletters?.length !== 1 ? 's' : ''}</p>
      )}
    </div>

     <div class="space-y-4">
          {newsletters?.map((newsletter) => (
            <NewsletterCard newsletter={newsletter} />
          ))}
      </div>
    </div>
  </div>
</Layout>