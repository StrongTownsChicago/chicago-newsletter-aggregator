---
export const prerender = false;

import type { UserProfile, NotificationRule } from '../lib/supabase';

const user = Astro.locals.user;

// Protect this route - require authentication
if (!user) {
  return Astro.redirect('/login');
}

const supabase = Astro.locals.supabase;

// Fetch user profile
const { data: profile, error: profileError } = await supabase
  .from('user_profiles')
  .select('*')
  .eq('id', user.id)
  .single();

// Fetch notification rules
const { data: rules, error: rulesError } = await supabase
  .from('notification_rules')
  .select('*')
  .eq('user_id', user.id)
  .order('created_at', { ascending: false });

const userProfile = profile as UserProfile | null;
const notificationRules = (rules as NotificationRule[]) || [];

// Topics grouped by category (from backend/processing/llm_processor.py)
const TOPIC_CATEGORIES = {
  "Incremental Housing": [
    "4_flats_legalization",
    "missing_middle_housing",
    "zoning_reform",
    "adu_coach_house",
    "housing_development",
    "single_stair_reform"
  ],
  "Parking": [
    "parking_minimums_elimination"
  ],
  "Streets": [
    "pedestrian_safety",
    "bike_infrastructure",
    "tactical_urbanism",
    "traffic_calming",
    "street_redesign"
  ],
  "Transit": [
    "transit_improvement",
    "cta_metra_funding",
    "transit_service_expansion"
  ],
  "Transparency": [
    "budget_transparency",
    "fiscal_sustainability",
    "tax_policy"
  ],
  "Governance": [
    "community_meeting",
    "development_approval",
    "ordinance_debate",
    "ward_infrastructure",
    "ward_services"
  ]
};

// Format topic for display
function formatTopic(topic: string): string {
  return topic
    .split('_')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

const maxRules = 5;
const canCreateRule = notificationRules.length < maxRules;

const error = Astro.url.searchParams.get('error');
const message = Astro.url.searchParams.get('message');
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notification Preferences - Chicago Newsletter Aggregator</title>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Notification Preferences</h1>
        <p class="mt-2 text-sm text-gray-600">
          Manage your notification rules and email preferences
        </p>
      </div>

      {error && (
        <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-md text-sm">
          {error}
        </div>
      )}

      {message && (
        <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-md text-sm">
          {message}
        </div>
      )}

      <!-- Global Settings -->
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Global Settings</h2>

        <form action="/api/notifications/update-preferences" method="POST" enctype="application/x-www-form-urlencoded" class="space-y-4">
          <div class="flex items-center justify-between">
            <div>
              <label for="enabled" class="font-medium text-gray-700">
                Enable Notifications
              </label>
              <p class="text-sm text-gray-500">
                Receive daily digest emails when newsletters match your rules
              </p>
            </div>
            <input
              type="checkbox"
              id="enabled"
              name="enabled"
              checked={userProfile?.notification_preferences?.enabled ?? true}
              class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
            />
          </div>

          <div class="pt-4 border-t border-gray-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="font-medium text-gray-700">Delivery Frequency</p>
                <p class="text-sm text-gray-500">Daily digest (one email per day)</p>
              </div>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                Daily
              </span>
            </div>
          </div>

          <div class="pt-4">
            <button
              type="submit"
              class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md"
            >
              Save Preferences
            </button>
          </div>
        </form>
      </div>

      <!-- Notification Rules -->
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h2 class="text-xl font-semibold text-gray-900">Notification Rules</h2>
            <p class="text-sm text-gray-500 mt-1">
              {notificationRules.length} of {maxRules} rules used
            </p>
          </div>
          {canCreateRule ? (
            <button
              id="addRuleBtn"
              class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md"
            >
              Add Rule
            </button>
          ) : (
            <span class="text-sm text-gray-500">Maximum rules reached</span>
          )}
        </div>

        {notificationRules.length === 0 ? (
          <div class="text-center py-12 border-2 border-dashed border-gray-300 rounded-lg">
            <p class="text-gray-500 mb-4">No notification rules yet</p>
            <p class="text-sm text-gray-400 mb-4">
              Create rules to get notified when newsletters match your interests
            </p>
            {canCreateRule && (
              <button
                id="addRuleBtn2"
                class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md"
              >
                Create Your First Rule
              </button>
            )}
          </div>
        ) : (
          <div class="space-y-4">
            {notificationRules.map((rule) => (
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="font-semibold text-gray-900">{rule.name}</h3>
                    <div class="mt-2 space-y-1">
                      {rule.topics && rule.topics.length > 0 && (
                        <div>
                          <span class="text-sm text-gray-500">Topics: </span>
                          <div class="inline-flex flex-wrap gap-2 mt-1">
                            {rule.topics.map((topic) => (
                              <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-800">
                                {formatTopic(topic)}
                              </span>
                            ))}
                          </div>
                        </div>
                      )}
                    </div>
                    <div class="mt-2">
                      {rule.is_active ? (
                        <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green-100 text-green-800">
                          Active
                        </span>
                      ) : (
                        <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-800">
                          Disabled
                        </span>
                      )}
                    </div>
                  </div>
                  <div class="flex gap-2 ml-4">
                    <button
                      class="edit-rule-btn text-sm text-blue-600 hover:text-blue-800"
                      data-rule-id={rule.id}
                      data-rule-name={rule.name}
                      data-rule-topics={JSON.stringify(rule.topics)}
                      data-rule-active={rule.is_active}
                    >
                      Edit
                    </button>
                    <form action="/api/notifications/delete-rule" method="POST" enctype="application/x-www-form-urlencoded" class="inline">
                      <input type="hidden" name="rule_id" value={rule.id} />
                      <button
                        type="submit"
                        class="text-sm text-red-600 hover:text-red-800"
                        onclick="return confirm('Are you sure you want to delete this rule?')"
                      >
                        Delete
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            ))}
          </div>
        )}
      </div>

      <div class="mt-8 text-center">
        <a href="/" class="text-sm text-gray-600 hover:text-gray-900">
          ‚Üê Back to home
        </a>
      </div>
    </div>
  </div>

  <!-- Add/Edit Rule Modal -->
  <div id="ruleModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
      <h3 id="modalTitle" class="text-lg font-semibold text-gray-900 mb-4">Add Notification Rule</h3>

      <form id="ruleForm" method="POST" enctype="application/x-www-form-urlencoded" class="space-y-4">
        <input type="hidden" id="ruleId" name="rule_id" />

        <div>
          <label for="ruleName" class="block text-sm font-medium text-gray-700 mb-1">
            Rule Name
          </label>
          <input
            type="text"
            id="ruleName"
            name="name"
            required
            placeholder="e.g., Housing and Zoning Updates"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Topics (select at least one)
          </label>
          <div class="space-y-3 max-h-96 overflow-y-auto border border-gray-300 rounded-md p-3">
            {Object.entries(TOPIC_CATEGORIES).map(([category, topics]) => (
              <div>
                <p class="font-semibold text-sm text-gray-900 mb-2">{category}</p>
                <div class="space-y-1 ml-4">
                  {topics.map((topic) => (
                    <label class="flex items-center">
                      <input
                        type="checkbox"
                        name="topics"
                        value={topic}
                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                      />
                      <span class="ml-2 text-sm text-gray-700">{formatTopic(topic)}</span>
                    </label>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>

        <div class="flex items-center">
          <input
            type="checkbox"
            id="isActive"
            name="is_active"
            checked
            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
          />
          <label for="isActive" class="ml-2 text-sm text-gray-700">
            Active (receive notifications for this rule)
          </label>
        </div>

        <div class="flex gap-3 pt-4 border-t border-gray-200">
          <button
            type="submit"
            class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md"
          >
            Save Rule
          </button>
          <button
            type="button"
            id="cancelBtn"
            class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-md"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const modal = document.getElementById('ruleModal');
    const modalTitle = document.getElementById('modalTitle');
    const ruleForm = document.getElementById('ruleForm') as HTMLFormElement;
    const ruleIdInput = document.getElementById('ruleId') as HTMLInputElement;
    const ruleNameInput = document.getElementById('ruleName') as HTMLInputElement;
    const isActiveInput = document.getElementById('isActive') as HTMLInputElement;
    const cancelBtn = document.getElementById('cancelBtn');
    const addRuleBtns = document.querySelectorAll('#addRuleBtn, #addRuleBtn2');
    const editRuleBtns = document.querySelectorAll('.edit-rule-btn');

    // Open modal for new rule
    addRuleBtns.forEach(btn => {
      btn?.addEventListener('click', () => {
        modalTitle!.textContent = 'Add Notification Rule';
        ruleForm.action = '/api/notifications/create-rule';
        ruleForm.reset();
        ruleIdInput.value = '';
        modal?.classList.remove('hidden');
      });
    });

    // Open modal for editing rule
    editRuleBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        const target = e.target as HTMLButtonElement;
        const ruleId = target.dataset.ruleId;
        const ruleName = target.dataset.ruleName;
        const ruleTopics = JSON.parse(target.dataset.ruleTopics || '[]');
        const ruleActive = target.dataset.ruleActive === 'true';

        modalTitle!.textContent = 'Edit Notification Rule';
        ruleForm.action = '/api/notifications/update-rule';
        ruleIdInput.value = ruleId || '';
        ruleNameInput.value = ruleName || '';
        isActiveInput.checked = ruleActive;

        // Check the appropriate topic checkboxes
        const topicCheckboxes = ruleForm.querySelectorAll('input[name="topics"]') as NodeListOf<HTMLInputElement>;
        topicCheckboxes.forEach(checkbox => {
          checkbox.checked = ruleTopics.includes(checkbox.value);
        });

        modal?.classList.remove('hidden');
      });
    });

    // Close modal
    cancelBtn?.addEventListener('click', () => {
      modal?.classList.add('hidden');
    });

    // Close on background click
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.add('hidden');
      }
    });
  </script>
</body>
</html>
