---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

const { data: newsletters, error } = await supabase
  .from('newsletters')
  .select('*, sources(*)')
  .order('received_date', { ascending: false })
  .limit(20);

if (error) {
  console.error('Error fetching newsletters:', error);
}
---

<Layout title="Chicago Newsletters">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header -->
    <header class="mb-8">
      <h1 class="text-5xl font-bold text-gray-900 mb-3">
        Chicago Newsletters
      </h1>
      <p class="text-xl text-gray-600">
        Searchable archive of newsletters from Chicago aldermen, city agencies, and elected officials
      </p>
    </header>

    <!-- Navigation -->
    <nav class="mb-8 flex gap-6 border-b border-gray-200 pb-4">
      <a href="/" class="text-blue-600 font-semibold border-b-2 border-blue-600 pb-3">Recent</a>
      <a href="/search" class="text-gray-600 hover:text-blue-600 pb-3">Search</a>
      <a href="/sources" class="text-gray-600 hover:text-blue-600 pb-3">By Source</a>
      <a href="/topics" class="text-gray-600 hover:text-blue-600 pb-3">By Topic</a>
    </nav>

    <!-- Newsletter List -->
    <main>
      <div class="space-y-4">
        {newsletters?.length === 0 && (
          <p class="text-gray-600 text-center py-12">No newsletters found.</p>
        )}

        {newsletters?.map((newsletter) => (
          <article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 border border-gray-200">
            <div class="flex justify-between items-start mb-2">
              <div class="flex-1">
                <h2 class="text-2xl font-semibold text-gray-900 mb-2">
                  <a href={`/newsletter/${newsletter.id}`} class="hover:text-blue-600 transition-colors">
                    {newsletter.subject}
                  </a>
                </h2>
                
                <div class="flex items-center gap-2 text-sm text-gray-600 mb-3">
                  {newsletter.sources?.name && (
                    <span class="font-medium text-gray-800">{newsletter.sources.name}</span>
                  )}
                  {newsletter.sources?.metadata?.ward_number && (
                    <span class="px-2 py-0.5 bg-blue-50 text-blue-700 rounded text-xs font-medium">
                      Ward {newsletter.sources.metadata.ward_number}
                    </span>
                  )}
                  <span class="text-gray-400">â€¢</span>
                  <time datetime={newsletter.received_date}>
                    {new Date(newsletter.received_date).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </time>
                </div>
              </div>
            </div>

            {newsletter.summary && (
              <p class="text-gray-700 mb-3 line-clamp-2">{newsletter.summary}</p>
            )}

            {newsletter.topics && newsletter.topics.length > 0 && (
              <div class="flex flex-wrap gap-2 mt-3">
                {newsletter.topics.map((topic: string) => (
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-full">
                    {topic}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </main>
  </div>
</Layout>