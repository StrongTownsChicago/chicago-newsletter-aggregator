---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import NewsletterCard from '../components/NewsletterCard.astro';
import { supabase } from '../lib/supabase';

const { data: newsletters, error } = await supabase
  .from('newsletters')
  .select('*, sources(*)')
  .order('received_date', { ascending: false })
  .limit(20);

if (error) {
  console.error('Error fetching newsletters:', error);
}
---

<Layout title="Chicago Newsletter Aggregator">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header -->
    <header class="mb-8">
      <h1 class="text-5xl font-bold text-gray-900 mb-3">
        Chicago Newsletter Aggregator
      </h1>
      <p class="text-xl text-gray-600">
        Searchable archive of newsletters from Chicago aldermen, city agencies, and elected officials
      </p>
    </header>

    <!-- Navigation -->
    <nav class="mb-8 flex gap-6 border-b border-gray-200 pb-4">
      <a href="/" class="text-blue-600 font-semibold border-b-2 border-blue-600 pb-3">Recent</a>
      <a href="/search" class="text-gray-600 hover:text-blue-600 pb-3">Search</a>
    </nav>

    <!-- Newsletter List -->
    <main>
      <div class="space-y-4">
        {newsletters?.length === 0 && (
          <p class="text-gray-600 text-center py-12">No newsletters found.</p>
        )}
        {newsletters?.map((newsletter) => (
          <NewsletterCard newsletter={newsletter} />
        ))}
      </div>
    </main>
</Layout>